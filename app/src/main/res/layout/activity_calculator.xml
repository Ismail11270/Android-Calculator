<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CalculatorActivity"
    android:background="@android:color/darker_gray"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/calculatorInput1"
        android:layout_width="404dp"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:textAlignment="viewEnd"
        android:layout_above="@id/calculatorInput2"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:paddingHorizontal="30dp"
        />
    <TextView
        android:id="@+id/calculatorInput2"
        android:layout_width="404dp"
        android:layout_height="60dp"
        android:paddingVertical="10dp"
        android:textAlignment="viewEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:paddingHorizontal="30dp"
        android:layout_above="@id/keyBoardGrid"
        />
    <GridLayout android:layout_width="wrap_content"
        android:id="@+id/keyBoardGrid"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:text="CE"
            android:background="@drawable/button_background"
            android:tag="ce"
            android:layout_row="0"
            android:layout_column="0"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"

            />

        <Button
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:text="C"
            android:background="@drawable/button_background"
            android:elevation="10dp"
            android:tag="c"
            android:layout_row="0"
            android:layout_column="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            />

        <Button
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:text="@string/del"
            android:background="@drawable/button_background"
            android:elevation="10dp"
            android:tag="del"
            android:layout_row="0"
            android:layout_column="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            />

        <Button
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:text="/"
            android:background="@drawable/button_background"
            android:elevation="10dp"
            android:tag="/"
            android:layout_row="0"
            android:layout_column="3"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            />

        <Button
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:text="7"
            android:background="@drawable/button_background"
            android:elevation="10dp"
            android:tag="7"
            android:layout_row="1"
            android:layout_column="0"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            />

        <Button
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:text="8"
            android:background="@drawable/button_background"
            android:elevation="10dp"
            android:tag="8"
            android:layout_row="1"
            android:layout_column="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"

            />

        <Button
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:text="9"
            android:background="@drawable/button_background"
            android:elevation="10dp"
            android:tag="9"
            android:layout_row="1"
            android:layout_column="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            />

        <Button
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:text="X"
            android:background="@drawable/button_background"
            android:elevation="10dp"
            android:tag="x"
            android:layout_row="1"
            android:layout_column="3"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            />

        <Button
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:text="4"
            android:background="@drawable/button_background"
            android:elevation="10dp"
            android:tag="4"
            android:layout_row="2"
            android:layout_column="0"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            />

        <Button
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:text="5"
            android:background="@drawable/button_background"
            android:elevation="10dp"
            android:tag="5"
            android:layout_row="2"
            android:layout_column="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            />

        <Button
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:text="6"
            android:background="@drawable/button_background"
            android:elevation="10dp"
            android:tag="6"
            android:layout_row="2"
            android:layout_column="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            />

        <Button
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:text="-"
            android:background="@drawable/button_background"
            android:elevation="10dp"
            android:tag="-"
            android:layout_row="2"
            android:layout_column="3"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            />

        <Button
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:text="1"
            android:background="@drawable/button_background"
            android:elevation="10dp"
            android:tag="1"
            android:layout_row="3"
            android:layout_column="0"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            />

        <Button
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:text="2"
            android:background="@drawable/button_background"
            android:elevation="10dp"
            android:tag="2"
            android:layout_row="3"
            android:layout_column="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            />

        <Button
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:text="3"
            android:background="@drawable/button_background"
            android:elevation="10dp"
            android:tag="3"
            android:layout_row="3"
            android:layout_column="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            />

        <Button
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:text="+"
            android:background="@drawable/button_background"
            android:elevation="10dp"
            android:tag="+"
            android:layout_row="3"
            android:layout_column="3"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            />

        <Button
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:text=""
            android:background="@drawable/button_background"
            android:elevation="10dp"
            android:tag=""
            android:layout_row="4"
            android:layout_column="0"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            />

        <Button
            android:layout_width="202dp"
            android:layout_height="101dp"
            android:text="0"
            android:background="@drawable/button_background"
            android:elevation="10dp"
            android:tag="0"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            />

        <Button
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:text="."
            android:background="@drawable/button_background"
            android:elevation="10dp"
            android:tag="dot"
            android:layout_row="4"
            android:layout_column="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            />

        <Button
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:text="="
            android:background="@drawable/button_background"
            android:elevation="10dp"
            android:tag="="
            android:layout_row="4"
            android:layout_column="3"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            />
    </GridLayout>



</RelativeLayout>